<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.PokemonPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pokemonOfficialArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="141dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/pokemonInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:text="Name"
            app:layout_constraintTop_toBottomOf="@+id/pokemonOfficialArt"
            tools:layout_editor_absoluteX="187dp" />

        <TextView
            android:id="@+id/baseHappiness"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/pokemonInfoName"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/captureRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/baseHappiness"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/pkmColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/captureRate"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/pkmHabitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/pkmEggGroup"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/pkmVarieties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pkmHabitat"
            tools:layout_editor_absoluteX="16dp" />

        <ListView
            android:id="@+id/pkmEggGroup"
            android:layout_width="409dp"
            android:layout_height="124dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="333dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>